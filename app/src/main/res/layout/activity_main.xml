<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        android:layout_marginEnd="20dp"
        android:ellipsize="start"
        />
    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:hint="hitung"
        android:textAlignment="textEnd"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/hasil"/>

    <LinearLayout
        android:id="@+id/baris1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/input">
        <Button
            android:id="@+id/hapus_btn"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"
            />
        <Button
            android:layout_alignEnd="@+id/bagi"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="/"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/baris2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baris1">
        <Button
            android:id="@+id/satu"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/dua"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/tiga"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/kali"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/baris3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baris2">
        <Button
            android:id="@+id/empat"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/lima"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/enam"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/kurang"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/baris4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baris3">
        <Button
            android:id="@+id/tujuh"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/delapan"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/sembilan"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/tambah"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/baris5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baris4">

        <Button
            android:id="@+id/nol"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_btn"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30dp" />
        <Button
            android:layout_alignEnd="@+id/koma"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text=","
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
        <Button
            android:layout_alignEnd="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="="
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn"/>
    </LinearLayout>


</RelativeLayout>